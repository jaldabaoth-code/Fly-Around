{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ trip.distance }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <a class="btn btn-primary col-6 mr-3" href="{{ path('trip_edit', {id: trip.id}) }}">Edit</a>
        <div class="col-6 px-0">
            {{ include('trip/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Trip index{% endblock %}

{% block body %}
    <h1>Trip index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Distance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.distance }}</td>
                    <td>
                        <a href="{{ path('trip_show', {id: trip.id}) }}">Show</a>
                        <a href="{{ path('trip_edit', {id: trip.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('trip_new') }}">New Trip</a>
{% endblock %}

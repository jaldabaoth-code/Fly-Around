{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block navbar_right %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class=" btn btn-success" href="{{path('city_new')}}"><i class="far fa-plus-square"></i> New City</a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Country</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td><a href="{{ path('city_show', {'id': city.id}) }}">{{ city.name }}</a></td>
                <td>{{ city.latitude }}</td>
                <td>{{ city.longitude }}</td>
                <td>{{ city.country }}</td>
                <td>
                    <a href="{{ path('city_edit', {'id': city.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

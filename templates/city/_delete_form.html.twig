<form class="col-6 px-0" method="POST" action="{{ path('city_delete', {id: city.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
    <button class="btn btn-danger col-12">Delete</button>
</form>
